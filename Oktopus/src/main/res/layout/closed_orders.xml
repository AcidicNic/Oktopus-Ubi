<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListaDePedidosActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/operatorAndFloor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin5"
            android:gravity="center"
            android:text="@string/FLOOR"
            android:textColor="@color/white"
            android:textSize="@dimen/text10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/backButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:layout_weight="1"
                android:background="@color/orange_button"
                android:minHeight="@dimen/standardButtonHeight"
                android:text="@string/BACK"
                android:textColor="@color/white"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />

            <Button
                android:id="@+id/filterButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginRight="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:layout_weight="1"
                android:background="@color/orange_button"
                android:minHeight="@dimen/standardButtonHeight"
                android:text="@string/FILTER"
                android:textColor="@color/white"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />

            <Button
                android:id="@+id/getOrdersButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin10"
                android:layout_weight="1"
                android:background="@color/light_blue_button"
                android:minHeight="@dimen/standardButtonHeight"
                android:text="@string/FUTURE_BILLING"
                android:textColor="@color/white"
                android:textSize="@dimen/text15"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:divider="#000000"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>